{
  "$schema": "https://json.schemastore.org/package",
  "name": "@mark1russell7/splay",
  "version": "0.0.0",
  "description": "Minimal recursive data renderer - framework agnostic core",
  "license": "MIT",
  "author": "Mark Russell <marktheprogrammer17@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/mark1russell7/splay.git"
  },
  "bugs": {
    "url": "https://github.com/mark1russell7/splay/issues"
  },
  "homepage": "https://github.com/mark1russell7/splay#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=25.0.0",
    "npm": ">=11.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@mark1russell7/cue": "github:mark1russell7/cue#main",
    "vitest": "^3.0.0",
    "@mark1russell7/test": "github:mark1russell7/test#main"
  },
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@mark1russell7/cue"
    ]
  }
}
